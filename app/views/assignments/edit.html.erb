<% content_for :title, "Edit Assignment" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl mb-6">Edit Assignment</h1>

  <%= render "form", assignment: @assignment %>

  <div class="flex flex-wrap gap-3 mt-6 items-center">
    <%= link_to "Show Assignment",
                student_assignment_path(@student, @assignment),
                class: "px-4 py-2 rounded-md bg-gray-100 hover:bg-gray-200 font-medium" %>

    <%= link_to "Back to Student", student_path(@student),
            class: "px-4 py-2 rounded-md bg-gray-100 hover:bg-gray-200 font-medium" %>

    <%= button_to "Delete Assignment",
                  student_assignment_path(@student, @assignment),
                  method: :delete,
                  data: { confirm: "Are you sure you want to delete this assignment?" },
                  class: "px-4 py-2 rounded-md bg-red-600 hover:bg-red-700 text-white font-medium" %>
  </div>
</div>
